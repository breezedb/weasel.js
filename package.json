{
  "name": "weaseljs",
  "version": "0.0.1",
  "description": "Collection of UI elements that behave as popovers",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "build": "tsc",
    "test": "mocha 'test/browser/**/*.{js,ts}'",
    "test-debug": "mocha --bail test/browser/**/*.{js,ts} --no-exit",
    "test-manual": "webpack-dev-server --config test/fixtures/webpack.config.js",
    "prepack": "[ ! -f .buildme ] || npm run build",
    "preinstall": "[ ! -f .buildme ] || npm run build"
  },
  "files": [
    "dist",
    "lib",
    "index.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gristlabs/weasel.js.git"
  },
  "author": "Grist Labs",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gristlabs/weasel.js/issues"
  },
  "homepage": "https://github.com/gristlabs/weasel.js#readme",
  "dependencies": {
    "grainjs": "git+https://github.com/gristlabs/grainjs.git#44d563adbab3730bd116cbbff73ee9842b289a53",
    "lodash": "^4.17.11",
    "popper.js": "1.14.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.3",
    "@types/selenium-webdriver": "^3.0.13",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-merge": "^4.1.3",
    "@types/webpack-serve": "^2.0.0",
    "cache-loader": "^1.2.5",
    "fork-ts-checker-webpack-plugin": "^0.5.1",
    "mocha": "5.2.0",
    "mocha-webdriver": "^0.1.6",
    "ts-loader": "^5.3.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-language-service": "0.9.9",
    "typescript": "3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4",
    "webpack-serve": "^2.0.2"
  }
